{
  "name": "feugene/support",
  "description": "PHP Support Package",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "php",
    "support",
    "helpers"
  ],
  "authors": [
    {
      "name": "Eugene Fureev",
      "homepage": "https://github.com/efureev"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~8.0",
    "phpstan/phpstan": "~0.11",
    "feugene/php-cs-fixer": "^1.0"
  },
  "autoload": {
    "files": [
      "src/Global/base.php"
    ],
    "psr-4": {
      "Php\\Support\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Php\\Support\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "@php ./vendor/bin/phpstan analyze --ansi --level=max ./src",
    "test": "@php ./vendor/bin/phpunit --no-coverage --testdox",
    "test-cover": "@php ./vendor/bin/phpunit --coverage-text --testdox",
    "test-full": "composer test-cover && composer phpstan"

  }
}
